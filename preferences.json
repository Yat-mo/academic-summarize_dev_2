{
  "theme": "default",
  "language": "zh",
  "export_format": "markdown",
  "auto_save": true,
  "cache_ttl": 86400,
  "max_concurrent": 3,
  "chunk_size": 1500,
  "temperature": 0.7,
  "notifications": {
    "success": true,
    "error": true,
    "warning": true,
    "info": true
  },
  "display": {
    "show_progress": true,
    "show_stats": true,
    "show_citations": true,
    "show_mindmap": true
  },
  "export": {
    "include_metadata": true,
    "include_stats": true,
    "include_citations": true,
    "include_mindmap": true
  }
}